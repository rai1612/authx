# ============================================
# AuthX Environment Configuration
# ============================================
# Copy this file to .env for local development
# For production (Render), set these as environment variables in Render dashboard

# ============================================
# LOCAL DEVELOPMENT CONFIGURATION
# ============================================
SPRING_PROFILE=dev
SERVER_PORT=8080

# Database (Local PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=authx
DB_USERNAME=authx_user
DB_PASSWORD=authx_pass
DDL_AUTO=create

# Redis (Local Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=mySecretKey123456789012345678901234567890
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# MFA
OTP_EXPIRATION=300
OTP_MAX_ATTEMPTS=3
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=AuthX MFA System
WEBAUTHN_ORIGIN=http://localhost:8080

# Email Configuration (Gmail SMTP)
# IMPORTANT: Replace with your actual Gmail credentials
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password

# Development
LOG_LEVEL=INFO
SHOW_SQL=false

# ============================================
# PRODUCTION CONFIGURATION (RENDER + NEON.TECH)
# ============================================
# Set these in Render dashboard environment variables

# Spring Profile (Render)
# SPRING_PROFILE=render

# Database (Neon.tech)
# Neon.tech provides DATABASE_URL in format: postgresql://user:password@host:port/dbname
# DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require

# Redis (Render Redis or External Redis)
# Render Redis provides REDIS_URL in format: redis://:password@host:port
# REDIS_URL=redis://:password@host:port
# Or for external Redis (Upstash, Redis Cloud, etc.)
# REDIS_URL=redis://default:password@host:port

# JWT (Production - Use strong random secret)
# JWT_SECRET=your-production-secret-key-min-32-characters-long
# JWT_EXPIRATION=86400000
# JWT_REFRESH_EXPIRATION=604800000

# MFA (Production)
# OTP_EXPIRATION=300
# OTP_MAX_ATTEMPTS=3
# WEBAUTHN_RP_ID=your-domain.com
# WEBAUTHN_RP_NAME=AuthX MFA System
# WEBAUTHN_ORIGIN=https://your-backend.onrender.com

# Email Configuration (Production)
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-gmail-app-password

# Optional: Database Migration
# DDL_AUTO=update

# CORS Configuration (Production)
# Comma-separated list of allowed origin patterns
# CORS_ALLOWED_ORIGINS=https://your-app.vercel.app,https://*.vercel.app,https://your-custom-domain.com